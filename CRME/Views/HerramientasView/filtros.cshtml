                <div class="form-group mb-0">
                    @Html.DropDownList("UM", new SelectList(ViewBag.UM, "Value", "Text"), "-- Seleccione una unidad de medida --", htmlAttributes: new { @class = "select classic" })

                    <label for="" class="col-form-label col-form-label-sm">-Realizar búsqueda</label>
