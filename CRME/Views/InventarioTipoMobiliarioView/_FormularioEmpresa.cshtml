@model CRME.Models.inventario_tipo_mobiliario



@*@model CRME.Models.Personas @model CRME.Models.Empresa *@



@if (ViewBag.edit != 1)
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Nuevo Mobiliario</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
else
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Nuevo Mobiliario</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
@using (Html.BeginForm("#", "#", FormMethod.Post, new { @class = "", id = "FrmEmpresa" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.tipo_mobiliario_ID)
    @*   @Html.HiddenFor(model => model.Em_Cve_Empresa) *@

    @* ----------------Datos linea----------------*@
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s12 m8 l8 input-field">
                    <b class="">Tipo de mobiliario:</b>
                    <div class="input-field margin-top-0">

                        @Html.EditorFor(model => model.mobiliario, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Ingrese el tipo de mobiliario", @minlength = 1, @maxlength = 50, @Style = "margin-bottom:0px !important;" } })
                        @Html.ValidationMessageFor(model => model.mobiliario, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 s12">
            <div class="row">
                <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                    <a class="btn red darken-4 waves-effect" href="@Url.Action("Index","InventarioTipoMobiliarioView")"><i class="mdi mdi-close hide-on-small-and-down"></i> Cancelar</a>
                    <button type="button" class="btn blue darken-4 waves-effect guardarEmpresa" style="margin-left: 10px"><i class="mdi mdi-content-save hide-on-small-and-down"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

