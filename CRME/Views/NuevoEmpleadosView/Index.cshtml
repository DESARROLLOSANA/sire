                        // Se agregan las nuevas opciones al dropdown "Sucursal" basadas en los datos recibidos
                        $.each(data, function (index, item) {
                            $("#Pu_Cve_Puesto").append('<option value="' + item.Value + '">' + item.Text + '</option>');
