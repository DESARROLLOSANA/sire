@using PagedList.Mvc
@model PagedList.IPagedList<CRME.Models.cat_usuarios>
@{
    CRME.Models.SIRE_Context db = new CRME.Models.SIRE_Context();
}

<div class="row margin-10">
    <div class="col l6 m6 s11 titlecircle">
        <b>Catalogo de empleados</b>
    </div>
    <div class="col l6 m6 s1 separator">
    </div>
</div>
<div id="TablaEmpresas">

    <div class="row">
        <div class="col s12 m8 l8 input-field center-align">
            <input type="text" name="busqueda" id="filtroBusquedaA" Value="@ViewBag.filtro" placeholder="Nombre,Apellido" />
        </div>
        <div class="col s12 m4 l4 input-field">
            <button class="btn light-blue darken-4 waves-effect buscarSoli white-text"><i class="mdi mdi-magnify"></i> Buscar</button>
            <button class="btn light-blue darken-4 waves-effect limpiar" style="margin-left: 25px" title="Limpiar"><i class="mdi mdi-filter-remove"></i></button>
        </div>
        @*<div class="col s12 m2 l2 input-field">
            <button class="btn light-blue darken-4 waves-effect excel" title="Exportar a excel"><i class="mdi mdi-file-excel"></i></button>
        </div>*@
    </div>

    <div class="row">
        <div class="col l12 m12 s12">
            <table class="striped highlight light-blue">
                <thead class="table-header-blue">
                    <tr class="table-header-tr-blue">
                        <td class="center">#</td>
                        <td class="center hide-on-small-only">Nombre completo</td>
                        <td class="center hide-on-small-only">Correo</td>
                        <td class="center hide-on-small-only">Empresa</td>
                        <td class="center hide-on-small-only">Departamento</td>
                        <td class="center hide-on-small-only">Estatus</td>
                        <td class="center">Opciones</td>
                    </tr>
                </thead>
                <tbody class="table-body-blue">
                    @if (Model.Count == 0)
                    {
                        <tr class="table-body">
                            <td colspan="7" class="center">
                                <b>No se encontraron coincidencias</b>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr class="table-body">
                                <td class="left-align" style="text-transform: uppercase;">@Html.DisplayFor(modelItem => item.usuario_ID)</td>
                                <td class="center hide-on-small-only" style="">@Html.DisplayFor(modelItem => item.nombre_completo)</td>
                                <td class="center hide-on-small-only" style="">@Html.DisplayFor(modelItem => item.correo)</td>
                                <td class="center hide-on-small-only" style="">@Html.DisplayFor(modelItem => db.Empresa.Find(item.Em_Cve_Empresa).Em_Descripcion)</td>
                                <td class="center hide-on-small-only" style="">@Html.DisplayFor(modelItem => db.Departamentos.Find(item.Dp_Cve_Departamento).Dp_Descripcion)</td>

                                @if (item.estatus_ID == 1)
                                {
                                    <td class="center hide-on-small-only" style="">Activo</td>
                                }
                                else
                                {
                                    <td class="center hide-on-small-only" style="">Baja</td>
                                }

                                <td class="center">
                                    <a href="#ancla" class="editarEmpresa" data-position="bottom" data-delay="50" title="Editar" data-tooltip="Editar" style="cursor:pointer;" id-item="@item.usuario_ID" id-vend=""><i class="mdi mdi-pencil mdi-24px yellow-text"></i></a>&nbsp;&nbsp;
                                    <a class="eliminarEmpresa" data-position="bottom" data-delay="50" title="Eliminar" style="cursor:pointer;" id-item="@item.usuario_ID" id-vend=""><i class="mdi mdi-close-outline mdi-24px red-text"></i></a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col s12 center-align">
            @if (Model != null)
            {
                @Html.PagedListPager(Model, page => Url.Action("_TablaLineas", new { page })
                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions()
                    {
                        Display = PagedListDisplayMode.IfNeeded,
                        DisplayPageCountAndCurrentLocation = true,
                        DisplayItemSliceAndTotal = false,
                        PageCountAndCurrentLocationFormat = "Página {0} de {1}.",
                        ItemSliceAndTotalFormat = "Mostrando los elementos {0} a {1} de {2}.",
                        LinkToIndividualPageFormat = "{0}",
                    }, new AjaxOptions()
                    {
                        HttpMethod = "POST",
                        UpdateTargetId = "TablaEmpresas",
                        OnComplete = "FltOnCompletePer",
                        OnBegin = "FltOnBeginPer"
                    }
                )
            )
            }
        </div>
    </div>
</div>
