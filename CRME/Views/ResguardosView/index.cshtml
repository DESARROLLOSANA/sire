        Buscar();
        function Buscar() {
            $("#filtroBusquedaA").keyup(function (e) {
                if (e.keyCode == 13) {
                    var filtro = $("#filtroBusquedaA").val();
                    $("#TablaResguardoLaptop").load('@Url.Action("_TablaReguardos", "ResguardosView")', { filtro }, function (response, status, xhr) {
                        if (status == "success") {
