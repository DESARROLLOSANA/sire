@model CRME.Models.ConocimientosInformaticos
@{
    ViewBag.Title = "_FormularioConocimientoInformatico";
}

<div class="row">
    <div class="col s12 m12 l12">
        @Html.HiddenFor(model => model.idConocimientoInformatico)
        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0">
                <b class="lbl-form-candidato-edit">Software:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.EditorFor(model => model.tpSoftware, new { htmlAttributes = new { @class = "Validate form-simple limpiar", @type = "text", @Style = "margin-bottom:0px !important;" } })
                @Html.ValidationMessageFor(model => model.tpSoftware, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b class="lbl-form-candidato-edit">Nivel:</b>
            </div>
            <div class="col s12 m12 l12 input-field margin-0">
                @Html.DropDownListFor(model => model.idNivelConocimiento, null, "--Nivel--", htmlAttributes: new { @class = "select classic limpiar", @Style = "margin-bottom:0px !important;" })
                @Html.ValidationMessageFor(model => model.idNivelConocimiento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div style="margin-top:20px;">
            <div class="row margin-0">
                <div class="input-field col s12 m12 l12 margin-0">
                    <b class="lbl-form-candidato-edit">Años de experiencia:</b>
                </div>
                <div class="input-field col s12 m12 l12 margin-0">
                    @Html.EditorFor(model => model.numAniosExperiencia, new { htmlAttributes = new { @class = "Validate form-simple limpiar entero", @type = "text", @min = "0", @Style = "margin-bottom:0px !important;" } })
                    @Html.ValidationMessageFor(model => model.numAniosExperiencia, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b class="lbl-form-candidato-edit">Comentarios:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.TextAreaFor(model => model.desComentarios,htmlAttributes : new { @class = "Validate form-simple limpiar", @type = "text", @style = "min-height:120px !important; resize:none !important;", @rows = "3" })                
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12  center-align">
                <label id="mensaje-error-model4" class="text-danger" style="font-size:15px"></label>
            </div>
        </div>
    </div>
</div>
