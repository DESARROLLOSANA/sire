@model CRME.Models.FormacionesAcademicas

@{
    ViewBag.Title = "_FormularioFormacionAcademica";
}

<div class="row">
    <div class="col s12 m12 l12">
        @Html.HiddenFor(model => model.idFormacionAcademica)
        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0">
            <b>Nivel de estudios:</b>
        </div>
        <div class="input-field col s12 m12 l12 margin-0">
            @Html.DropDownListFor(model => model.idNivelEstudio, null, "-- Nivel de estudios --", htmlAttributes: new { @class = "select classic limpiar" })
            @Html.ValidationMessageFor(model => model.idNivelEstudio, "", new { @class = "text-danger" })
        </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b>Título profesional:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.DropDownListFor(model => model.idLicenciatura, null, "-- Título profesional --", htmlAttributes: new { @class = "select classic limpiar" })
                @Html.ValidationMessageFor(model => model.idLicenciatura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b>Universidad:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.DropDownListFor(model => model.idColegio, null, "-- Universidad --", htmlAttributes: new { @class = "select classic limpiar" })
                @Html.ValidationMessageFor(model => model.idColegio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div style="margin-top:-5px;">
            <div class="row margin-0">
                <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                    <b>Fecha de inicio:</b>
                </div>
                <div class="input-field col s12 m12 l12 margin-0">
                    @Html.EditorFor(model => model.feInicio, new { htmlAttributes = new { @class = "Validate form-simple datepicker1 limpiar", @type = "text", @Style = "margin-bottom:0px !important;", @Placeholder = "Seleccione fecha de inicio" } })
                    @Html.ValidationMessageFor(model => model.feInicio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b>Fecha de terminación:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.EditorFor(model => model.feTerminacion, new { htmlAttributes = new { @class = "Validate form-simple datepicker2 limpiar", @type = "text", @Style = "margin-bottom:0px !important;", @Placeholder = "Seleccione fecha de terminación" } })
                @Html.ValidationMessageFor(model => model.feTerminacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0">
                <b>Comentarios:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.TextAreaFor(model => model.desComentarios, htmlAttributes: new { @class = "Validate form-simple", @type = "text", @style = "min-height:120px !important; resize:none !important;", @rows = "3", @Placeholder = "Ingrese comentarios" })
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12  center-align">
                <label id="mensaje-error-model1" class="text-danger" style="font-size:15px"></label>
            </div>
        </div>
    </div>
</div>

