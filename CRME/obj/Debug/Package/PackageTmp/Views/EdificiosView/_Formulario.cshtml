@model CRME.Models.Solicitud_Mtto


@if (ViewBag.edit != 1)
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Nueva solicitud</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
else
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Editar solicitud</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}

@using (Html.BeginForm("#", "#", FormMethod.Post, new { @class = "", id = "FrmEdificio" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id_Solicitud)

    <!-- ----------------Datos personales---------------- -->
    <div class="row">
        <div class="col s12 m4 l4 input-field">
            <b class="">Empresa</b>
            <div class="input-field margin-top-0">
                @if (Model.Id_Solicitud == 0)
                {
                    @Html.DropDownListFor(model => model.Em_Cve_Empresa, new SelectList(ViewBag.empresa, "Value", "Text"), "-- Seleccione una empresa --", htmlAttributes: new { @class = "select classic" })
                }
                else
                {
                    @Html.DropDownListFor(model => model.Em_Cve_Empresa, new SelectList(ViewBag.empresa, "Value", "Text"), "-- Seleccione una empresa --", new { @class = "select classic" })
                }
                @Html.ValidationMessageFor(model => model.Em_Cve_Empresa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col s12 m4 l4 input-field">
            <b class="">Sucursal</b>
            <div class="input-field margin-top-0">
                @if (Model.Id_Solicitud == 0)
                {
                    @Html.DropDownListFor(model => model.Sc_Cve_Sucursal, (SelectList)ViewBag.sucursal, "-- Seleccione una sucursal --", htmlAttributes: new { @class = "select classic " })
                }
                else
                {
                    @Html.DropDownListFor(model => model.Sc_Cve_Sucursal, (SelectList)ViewBag.sucursal, new { @class = "select classic sucursal-dropdown" })
                }

                @Html.ValidationMessageFor(model => model.Sc_Cve_Sucursal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col s12 m4 l4 input-field">
            <b class="">Tipo solicitud</b>
            <div class="input-field margin-top-0">
                @if (Model.Id_Solicitud == 0)
                {
                    @Html.DropDownListFor(model => model.Id_Tipo_Sol, new SelectList(ViewBag.tiposolicitud, "Value", "Text"), "-- Seleccione un tipo de solicitud --", htmlAttributes: new { @class = "select classic" })
                }
                else
                {
                    @Html.DropDownListFor(model => model.Id_Tipo_Sol, new SelectList(ViewBag.tiposolicitud, "Value", "Text"), new { @class = "select classic" })
                }
                @Html.ValidationMessageFor(model => model.Id_Tipo_Sol, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m12 l12 input-field">
            <b class="">Descripción:</b>
            <div class="input-field margin-top-0">
                @Html.TextAreaFor(model => model.Sm_Descripcion, new { @class = "Validate form-simple", placeholder = "Ingrese la Descripcion", maxlength = 100, style = " !important;" })
                @Html.ValidationMessageFor(model => model.Sm_Descripcion, "", new { @class = "text-danger" })
                <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
            </div>
        </div>
    </div>
    <!-- ---------------Botones---------------- -->
    <!--<div class="row">
        <div class="col l12 m12 s12">
            <div class="row">
                <div class="col l12  m12 s12 left-align">
                    <a class="btn green darken-4 waves-effect" style="cursor:pointer;" id="agregaevi"><i class="mdi mdi-plus-box-multiple hide-on-small-and-down"></i> Agregar evidencia</a>-->
                    @*<button type="submit" class="btn green darken-4 waves-effect agregaevi" style="margin-left: 10px"><i class="mdi mdi-plus-box-multiple hide-on-small-and-down"></i> Agregar evidencia</button>*@
                <!--</div>
            </div>
        </div>
    </div>-->
    <!-- ---------------Botones---------------- -->
    <div class="row">
        <div class="col l12 m12 s12">
            <div class="row">
                <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                    <a class="btn red darken-4 waves-effect" href="@Url.Action("Index", "EdificiosView")"><i class="mdi mdi-close hide-on-small-and-down"></i> Cancelar</a>
                    <button type="submit" class="btn blue darken-4 waves-effect guardarEdificio" style="margin-left: 10px"><i class="mdi mdi-content-save hide-on-small-and-down"></i> Guardar</button>
                </div>
            </div>
        </div>
    </div>

}
