                @Html.DropDownListFor(model => model.Em_Cve_Empresa, new SelectList(ViewBag.empresa, "Value", "Text"), new { @class = "select classic" })
            }
            @Html.ValidationMessageFor(model => model.Em_Cve_Empresa, "", new { @class = "text-danger" })
