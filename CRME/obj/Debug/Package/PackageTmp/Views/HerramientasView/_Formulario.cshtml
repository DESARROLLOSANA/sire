            }
            @Html.ValidationMessageFor(model => model.Dp_Cve_Departamento, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col s12 m2 l2 input-field">
        <b class="">serie:</b>
        <div class="input-field margin-top-0">
            @Html.TextBoxFor(model => model.serie, new { @class = "Validate form-simple", placeholder = "Ingrese la serie", maxlength = 100, style = " !important;" })
            @Html.ValidationMessageFor(model => model.serie, "", new { @class = "text-danger" })
            <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
        </div>
    </div>
    <div class="col s12 m1 l1">
        <p>
            @if (Model.EPI == null || Model.EPI == false)
            {
                <input type="checkbox" class="filled-in" id="EPI" />
            }
            else
            {
                <input type="checkbox" class="filled-in" id="EPI" checked="checked" />

            }
            <label for="EPI">EPI</label>

        </p>
        @Html.HiddenFor(model => model.EPI, new { @class = "Validate" })
    </div>
</div>
