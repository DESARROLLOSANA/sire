        </div>
    </div>
}

@using (Html.BeginForm("#", "#", FormMethod.Post, new { @class = "", id = "FrmEdificio" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <!-- ----------------Datos personales---------------- -->
<div class="row">
    <div class="col s12 m12 l12 input-field">
        <b class="">Descripción:</b>
        <div class="input-field margin-top-0">
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "Validate form-simple", placeholder = "Ingrese la Descripcion", maxlength = 100, style = " !important;" })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 m3 l3 input-field">
        <b class="">Familia</b>
        <div class="input-field margin-top-0">
            @if (Model.Id_Familia == 0)
            {
                @Html.DropDownListFor(model => model.Id_Familia, new SelectList(ViewBag.Familia, "Value", "Text"), "-- Seleccione una familia --", htmlAttributes: new { @class = "select classic" })
            }
            else
            {
                @Html.DropDownListFor(model => model.Id_Familia, new SelectList(ViewBag.Familia, "Value", "Text"), "-- Seleccione una familia --", new { @class = "select classic" })
            }
            @Html.ValidationMessageFor(model => model.Id_Familia, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col s12 m3 l3 input-field">
        <b class="">Subfamilia</b>
        <div class="input-field margin-top-0">
            @if (Model.Id_Sub_fam == 0)
            {
                @Html.DropDownListFor(model => model.Id_Sub_fam, (SelectList)ViewBag.Subfamilia, "-- Seleccione una subfamilia --", htmlAttributes: new { @class = "select classic " })
            }
            else
            {
                @Html.DropDownListFor(model => model.Id_Sub_fam, (SelectList)ViewBag.Subfamilia, new { @class = "select classic sucursal-dropdown" })
            }

            @Html.ValidationMessageFor(model => model.Id_Sub_fam, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col s12 m3 l3 input-field">
        <b class="">Condicion fisica:</b>
        <div class="input-field margin-top-0">
            @if (Model.Id_condicion == 0)
            {
                @Html.DropDownListFor(model => model.Id_condicion, new SelectList(ViewBag.tiposolicitud, "Value", "Text"), "-- Seleccione una condicion fisica --", htmlAttributes: new { @class = "select classic" })
            }
            else
            {
                @Html.DropDownListFor(model => model.Id_condicion, new SelectList(ViewBag.tiposolicitud, "Value", "Text"), new { @class = "select classic" })
            }
            @Html.ValidationMessageFor(model => model.Id_condicion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col s12 m3 l3 input-field">
        <b class="">Medida:</b>
