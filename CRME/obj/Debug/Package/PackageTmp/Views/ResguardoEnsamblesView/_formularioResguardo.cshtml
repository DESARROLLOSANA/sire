@model CRME.Models.Resguardos_Lista_Ensambles
@*@model CRME.Models.Personas*@

@{

}
@if (ViewBag.edit != 1)
{
    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Nuevo Resguardo Ensamble</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
else
{

    <div class="row margin-10">
        <div class="col l6 m6 s11 titlecircle">
            <b>Visualizar Resguardo Ensamble</b>
        </div>
        <div class="col l6 m6 s1 separator">
        </div>
    </div>
}
@using (Html.BeginForm("#", "#", FormMethod.Post, new { @class = "", id = "FrmResguardo" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Resguardo_ID)
    @* ----------------Datos de personales----------------*@
    <div class="row">
        <div class="col s12 m12 l12">

            @if (ViewBag.edit == 1)
            {
                <div class="row">
                    <div class="col l12 m12 s12">
                        <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                            <button type="button" class="btn green darken-4 waves-effect devolverResguardo" style="margin-left: 10px"><i class="mdi mdi-backup-restore hide-on-small-and-down"></i> Devolver</button>
                        </div>
                    </div>
                </div>
            }


            <div class="row">
                @if (ViewBag.edit != 1)
                {
                    <div class="col s12 m4 l4 input-field">
                        <b class="">Serie CPU:</b>
                        <div class="input-field margin-top-0">
                            @Html.EditorFor(model => model.Serie_CPU, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Ingrese la serie", @maxlength = 100, @Style = "margin-bottom:0px !important;" } })
                            @Html.ValidationMessageFor(model => model.Serie_CPU, "", new { @class = "text-danger" })
                            <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col s12 m4 l4 input-field">
                        <b class="">Serie CPU:</b>
                        <div class="input-field margin-top-0">
                            @Html.EditorFor(model => model.Serie_CPU, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Ingrese la serie", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Serie_CPU, "", new { @class = "text-danger" })
                            <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                        </div>
                    </div>
                }
                @* Se Editara este campo para que se convierta en uno preedictivo *@

                @if (ViewBag.edit != 1)
                {
                    @* Aqui se añade la edicion *@
                    <div class="col s12 m4 l4 input-field">
                        <b class="">Serie Monitor:</b>
                        @Html.EditorFor(model => model.Serie_monitor, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Favor de añadir la linea", @maxlength = 100, @Style = "margin-bottom:0px !important;" } })
                        @Html.ValidationMessageFor(model => model.Serie_monitor, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                        <input type="hidden" id="id_linea" name="id_linea">
                    </div>
                }
                else
                {
                    <div class="col s12 m4 l4 input-field">
                        <b class="">Serie Monitor:</b>
                        @Html.EditorFor(model => model.Serie_monitor, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "linea", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Serie_monitor, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                    </div>
                }

                @* aqui tarmina el cambio que se hizo *@


                <div class="col s12 m4 l4 input-field">
                    <b class="">Marca CPU</b>
                    @Html.EditorFor(model => model.Marca_ensamble, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Marca", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Marca_ensamble, "", new { @class = "text-danger" })
                    <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12 input-field">
                    <b class=""> Modelo CPU</b>
                    @Html.TextAreaFor(model => model.Modelo_ensamble, new { @class = "Validate form-simple", @Placeholder = "modelo", @Style = "margin-bottom:0px !important;", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Modelo_ensamble, "", new { @class = "text-danger" })
                    <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                </div>
            </div>
        </div>
    </div>

    @* ----------------Datos de usuario----------------*@
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="row">

                <div class="col s12 m5 l5">
                    <b class="">Codigo de inventario:</b>
                    @Html.EditorFor(model => model.Codigo_inventario_ensamble, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Codigo de inventario", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Codigo_inventario_ensamble, "", new { @class = "text-danger" })
                    <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="row">

                <div class="col s12 m12 l12">
                    <b class="">Caracteristicas del CPU:</b>
                    @Html.EditorFor(model => model.Descripcion_ensambles, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Ingrese el proveedor", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Descripcion_ensambles, "", new { @class = "text-danger" })
                    <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                </div>

            </div>
            @if (ViewBag.edit != 1)
            {
                <div class="row">
                    <div class="col s12 m6 l6">
                        <b class="">Persona quien recibe:</b>
                        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Quien Recibe", @maxlength = 100, @Style = "margin-bottom:0px !important;" } })
                        @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                        <input type="hidden" id="id_recibe" name="id_recibe">
                    </div>
                    <div class="col s12 m6 l6">
                        <b class="">Persona quien entrega:</b>
                        @Html.EditorFor(model => model.entrega, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Quien entrega", @maxlength = 100, @Style = "margin-bottom:0px !important;" } })
                        @Html.ValidationMessageFor(model => model.entrega, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                        <input type="hidden" id="Id_entrega" name="Id_entrega">
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col s12 m6 l6">
                        <b class="">Persona quien recibe:</b>
                        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Quien recibe", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                    </div>
                    <div class="col s12 m6 l6">
                        <b class="">Persona quien entrega:</b>
                        @Html.EditorFor(model => model.entrega, new { htmlAttributes = new { @class = "Validate form-simple", @Placeholder = "Quien entrega", @maxlength = 100, @Style = "margin-bottom:0px !important;", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.entrega, "", new { @class = "text-danger" })
                        <div id="mensaje-error-model" class="text-danger" style="font-size:15px"></div>
                    </div>
                </div>
            }

        </div>
    </div>
    @*---------------Botones----------------*@
    if (ViewBag.edit != 1)
    {

        // este se activa cuando se va hacer un nuevo resguardo
        <div class="row">
            <div class="col l12 m12 s12">
                <div class="row">
                    <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                        <a class="btn red darken-4 waves-effect" href="@Url.Action("Index","ResguardoEnsamblesView")"><i class="mdi mdi-close hide-on-small-and-down"></i> Cancelar</a>
                        <button type="button" class="btn blue darken-4 waves-effect guardarResguardo" style="margin-left: 10px"><i class="mdi mdi-content-save hide-on-small-and-down"></i> Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col l12 m12 s12">
                <div class="row">
                    <div class="col push-l6 l6 push-m4 m8 s12 right-align">
                        <a class="btn red darken-4 waves-effect" href="@Url.Action("Index","ResguardoEnsamblesView")"><i class="mdi mdi-arrow-left hide-on-small-and-down"></i> volver</a>
                        <button type="button" class="btn blue darken-4 waves-effect generarPdf" style="margin-left: 10px"><i class="mdi mdi-file-pdf-box hide-on-small-and-down"></i> Generar pdf</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
