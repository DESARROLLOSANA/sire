    @{ 
        CRME.Models.SIRE_Context db = new CRME.Models.SIRE_Context();
        string alerta = "";
        int dia = 0;
        int mes = 0;
        int año = 0;

        int horasd = 24;
        int horasmes = 720;
        int horasaño = 8760;

        int total = 0;
        for (int i = 1; i <= 3; i++)
        {
            var lista = db.cat_resguardo_herramientas.Where(x => x.temporalidad == 2 && x.tipo == i).Select(X => new { id = X.resguardo_mobiliario_ID, fecha = X.fechaperiodo, cantiad = X.cantidad }).Distinct();
            foreach (var y in lista)
            {
                DateTime RESGUARDO = y.fecha;
                DateTime SISTEMA = DateTime.Now;
                TimeSpan diferencia = SISTEMA - RESGUARDO;
                int horas = (int)diferencia.TotalHours;
                if (i == 1)
                {
                    if (horas >= (horasd * y.cantiad))
                    {
                        dia = dia + 1;
                    }
                }
                else if(i == 2)
                {
                    if (horas >= (horasmes * y.cantiad))
                    {
                        mes = mes + 1;
                    }
                }
                else
                {
                    if (horas >= (horasaño * y.cantiad))
                    {
                        año = año + 1;
                    }
                }

            }
        }

        total = dia + mes + año;
        if (total != 0)
        {
            alerta = total.ToString();
        }
    }

