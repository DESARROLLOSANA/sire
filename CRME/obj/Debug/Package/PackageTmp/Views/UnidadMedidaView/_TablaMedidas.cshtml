
@using PagedList.Mvc
@model PagedList.IPagedList<CRME.Models.Unidad_Medida>
@{

}

<div class="row margin-10">
    <div class="col l6 m6 s11 titlecircle">
        <b>Lista de unidades de medida</b>
    </div>
    <div class="col l6 m6 s1 separator">
    </div>
</div>
<div id="tblPersonas">
    @*<div class="row">
            <div class="col s12 m6 l6 input-field form-simple center-align">
                <input type="text" name="busqueda" id="filtroBusqueda" onkeypress="if (event.keyCode == 13) Buscar()" Value="@ViewBag.filtro" placeholder="Ingrese Razon social" />
            </div>
            <div class="col s12 m6 l6 input-field">
                <button class="btn light-blue  darken-4 waves-effect buscarSoli white-text"><i class="mdi mdi-magnify"></i> Buscar</button>
                <button class="btn light-blue  darken-4 waves-effect limpiar" style="margin-left: 10px" title="LIMPIAR"><i class="mdi mdi-filter-remove"></i></button>
            </div>
        </div>*@
    <div class="row">
        <div class="col l12 m12 s12">
            <table class="striped highlight light-blue">
                <thead class="table-header-blue">
                    <tr class="table-header-tr-blue">
                        <td class="center">Clave unidad de medida</td>
                        <td class="center hide-on-small-only">descripcion</td>
                        <td class="center hide-on-small-only">abreviatura</td>
                        <td class="center">Opciones</td>
                    </tr>
                </thead>
                <tbody class="table-body-blue">
                    @if (Model.Count == 0)
                    {
                        <tr class="table-body">
                            <td colspan="7" class="center">
                                <b>No se encontraron coincidencias</b>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                <tr class="table-body">
                    <td class="center-align" style="text-transform: uppercase;">@Html.DisplayFor(modelItem => item.Id_UM)</td>
                    <td class="center hide-on-small-only" style="text-transform: uppercase;">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="center hide-on-small-only" style="text-transform: uppercase;">@Html.DisplayFor(modelItem => item.Abreviacion)</td>

                    <td class="center">
                        <a href="#ancla" class="editarEmpresa" data-position="bottom" data-delay="50" title="Editar" data-tooltip="Editar" style="cursor:pointer;" id-item="@item.Id_UM" id-vend=""><i class="mdi mdi-pencil mdi-24px yellow-text"></i></a>&nbsp;&nbsp;
                        <a class="eliminarEmpresa" data-position="bottom" data-delay="50" title="Eliminar" style="cursor:pointer;" id-item="@item.Id_UM" id-vend=""><i class="mdi mdi-close-outline mdi-24px red-text"></i></a>

                    </td>
                </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col s12 center-align">
            @if (Model != null)
            {
                @Html.PagedListPager(Model, page => Url.Action("_TablaMedidas", new { page })
                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions()
                    {
                        Display = PagedListDisplayMode.IfNeeded,
                        DisplayPageCountAndCurrentLocation = true,
                        DisplayItemSliceAndTotal = false,
                        PageCountAndCurrentLocationFormat = "Página {0} de {1}.",
                        ItemSliceAndTotalFormat = "Mostrando los elementos {0} a {1} de {2}.",
                        LinkToIndividualPageFormat = "{0}",
                    }, new AjaxOptions()
                    {
                        HttpMethod = "POST",
                        UpdateTargetId = "tblPersonas",
                        OnComplete = "FltOnCompletePer",
                        OnBegin = "FltOnBeginPer"
                    }
                )
            )
            }
        </div>
    </div>
</div>

