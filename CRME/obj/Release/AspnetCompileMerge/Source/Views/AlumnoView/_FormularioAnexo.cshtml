@model CRME.Models.Anexos
@{
    ViewBag.Title = "_FormularioDocumentoAnexo";
}

<div class="row">
    <div class="col s12 m12 l12">
        @Html.HiddenFor(model => model.idAnexo)
        @Html.Hidden("bandera", "",htmlAttributes: new { @Value= @ViewBag.bandera })

        <div class="row margin-0">
            <div class="input-field col s12 m12 l2 margin-0">
                <b>Título:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.EditorFor(model => model.nbTitulo, new { htmlAttributes = new { @class = "Validate form-simple limpiar", @Style = "margin-bottom:0px !important;", @type = "text",@Placeholder="INGRESE NOMBRE DEL ARCHIVO" } })
                @Html.ValidationMessageFor(model => model.nbTitulo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div style="margin-top:-5px;">
            <div class="row margin-0">
                <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                    <b>Tipo de documento:</b>
                </div>
                <div class="col s12 m12 l12 input-field margin-0">
                    @Html.DropDownListFor(model => model.tpDocumento, new SelectList(new List<Object> { new { Value = "docx", Text = "Documento Word" }, new { Value = "pdf", Text = "Documento PDF" } }, "Value", "Text"), "--Seleccionar--", htmlAttributes: new { @class = "select classic limpiar" })
                    @Html.ValidationMessageFor(model => model.tpDocumento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row margin-0">
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b>Descripción:</b>
            </div>
            <div class="input-field col s12 m12 l12 margin-0">
                @Html.TextAreaFor(model => model.desObservaciones, htmlAttributes: new { @class = "Validate form-simple", @type = "text", @style = "min-height:120px !important; resize:none !important;", @rows = "3", @Placeholder = "INGRESE DESCRIPCIÓN" })
                @*@Html.EditorFor(model => model.desObservaciones, new { htmlAttributes = new { @class = "Validate form-simple limpiar" } })*@
                @Html.ValidationMessageFor(model => model.desObservaciones, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row margin-0">
                @Html.HiddenFor(model => model.pathDocumento)
            <div class="input-field col s12 m12 l12 margin-0 margin-top-15">
                <b>Documento:</b>
            </div>
            <div class="col s12 m12 l12" style="margin-top:-15px">
                <div class="file-field input-field">
                    <div class="btn orange">
                        <i class="mdi mdi-inbox-arrow-up"></i>
                        <input type="file" id="fileInput" class="myfile" accept=".docx, .pdf">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate limpiar" type="text" value="@ViewBag.RutaArchivo">
                    </div>
                </div>
                <div class="row">
                    <div class="col l10 push-l1 m10 push-m1 s10 push-s1 center-align" id="msjAlert" style="display: none; margin-top:10px;">

                    </div>
                </div>
                <div class="row">
                    <div class="col l10 push-l1 m10 push-m1 s10 push-s1 center-align" id="success" style="display: none; margin-top:10px;">

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12  center-align">
                <label id="mensaje-error-model5" class="text-danger" style="font-size:15px"></label>
            </div>
        </div>
    </div>
</div>